{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MathFP",
	"patterns": [
		{
			"include": "#preprocessor"
		},
		{
			"include": "#functions"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"preprocessor": {
			"patterns": [
				{
					"name": "meta.preprocessor.include.mfp",
					"begin": "^(\\s*)(!)(\\s*)(include)\\b\\s*(\\()",
					"beginCaptures": {
						"2": {
							"name": "punctuation.definition.directive.mfp"
						},
						"4": {
							"name": "keyword.control.directive.include.mfp"
						},
						"5": {
							"name": "punctuation.section.group.begin.mfp"
						}
					},
					"end": "(\\))",
					"endCaptures": {
						"1": {
							"name": "punctuation.section.group.end.mfp"
						}
					},
					"patterns": [
						{
							"name": "string.unquoted.mfp",
							"match": "[^\\)\\s]+"
						}
					]
				}
			]
		},
		"functions": {
			"patterns": [
				{
					"name": "entity.name.function.mfp",
					"begin": "\\s*(\\w+)\\s*(\\()",
					"beginCaptures": {
						"1": {
							"name": "entity.name.function.mfp"
						},
						"2": {
							"name": "punctuation.section.group.begin.mfp"
						}
					},
					"end": "(\\))",
					"endCaptures": {
						"1": {
							"name": "punctuation.section.group.end.mfp"
						}
					},
					"patterns": [
						{
							"include": "$self"
						}
					]
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.mfp",
					"match": "\\b(if|then|else)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.mfp",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.mfp",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mfp",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.mfp",
					"match": "#.*$"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.mfp",
					"match": ":=|\\|->|==|!=|<=|>=|[+\\-*/<>]"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"name": "variable.name.mfp",
					"match": "[A-Za-z_][A-Za-z0-9_]*"
				}
			]
		}
	},
	"scopeName": "source.mfp"
}